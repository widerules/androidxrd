<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg2"
    android:weightSum="1">
    <Button 
    	android:id="@+id/first_banger" 
    	android:text="@string/first_banger" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.01" android:layout_width="92dp">
    </Button>
    <Button 
    	android:id="@+id/second_banger" 
    	android:text="@string/second_banger" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.01" android:layout_width="92dp">
    </Button>
        <Button 
    	android:id="@+id/third_banger" 
    	android:text="@string/third_banger" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.01" android:layout_width="92dp">
    </Button>
    <Button 
    	android:id="@+id/delay" 
    	android:text="@string/delay" 
    	android:layout_height="wrap_content" 
    	android:layout_weight="0.01"
    	android:layout_width="91dp">
    </Button>
    <ImageView
    	android:id="@+id/banger_anim" 
    	android:layout_height="148dp"
    	android:layout_width="148dp"
    />
</LinearLayout>
